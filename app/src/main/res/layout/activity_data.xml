<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/top_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="info"
            android:textStyle="bold"
            android:id="@+id/tvHistory"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_below="@+id/tvHistory"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:id="@+id/lb_tim"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:layout_below="@id/lb_tim"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:id="@+id/lb_dist"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:layout_below="@id/lb_dist"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:id="@+id/lb_cal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvHistory"
            android:id="@+id/tv_timeVal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_timeVal"
            android:id="@+id/tv_distVal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_distVal"
            android:id="@+id/tv_calVal"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_runner"
        android:id="@+id/ic_runner"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:id="@+id/listHistory"
        android:scrollbars="vertical" />


</RelativeLayout>